<button class = "button button3" onclick="location.href='/testimonials/new'" id = "make_testimonial_button">Make A Testimonial</button>
<div class = "testimonial">
  
  <% @testimonials.each do |testimonial| %>
    
      <p>
          <strong>Title:</strong> 
          <%= testimonial.title %>
      </p>
      
      <p>
          <strong>Name:</strong> 
          <%= testimonial.name %>
      </p>
      
      <p id = "desc">
          <%= testimonial.desc %>
      </p>
    
    <hr>
    
  <% end %>
</div>

