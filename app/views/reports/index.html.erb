
<h2>Listing reports</h2>

<div style='width: 800px;'> 
    <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>
  
  
<p><a><%= link_to 'Make a Report', new_report_path %></a></p>

<table class="table">
  <tr>
    <th class="row-1 row-concern">Concern</th>
    <th class="row-2 row-location">Location</th>
    <th class="row-3 row-descrip">Description</th>
    <th class="row-4 row-email">Email</th>
  </tr>
 
  <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td><%= report.location %></td>
      <td><%= report.desc %></td>
      <td><%= report.email %></td>
      <td><%= link_to 'Show', report_path(report) %></td>
      <td><%= link_to 'Edit', edit_report_path(report) %></td>
      <td><%= link_to 'Destroy',
                        report_path(report),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>